#!/bin/bash
#
# show available pacman updates

PACMAN=$(checkupdates | wc -l)

if [ "$PACMAN" -gt 0 ]; then
    echo " <span foreground='#81a2be'> </span>$PACMAN "
    #     
else
    exit 0
fi

case $BLOCK_BUTTON in
    # left click, check arch linux homepage
    1) $BROWSER https://www.archlinux.org ;;
esac
